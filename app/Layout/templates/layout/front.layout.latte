{templateType App\Layout\Presenter\Types\FrontLayoutTemplate}

{import '../asideBlocks.latte'}

{layout 'base.layout.latte'}


{block 'head'}{/block}


{block 'siteTitle'}
	<title>{ifset 'headTitle'}{include 'headTitle'}{else}{ifset 'title'}{include 'title'} - {/ifset}Tomáš Čierny{/ifset}</title>
{/block}


{block 'robots'}

	{if $isProductionServer}
        <meta name="robots" content="index, follow">

	{else}
        <meta name="robots" content="noindex, nofollow">

	{/if}

{/block}


{block 'analytics'}

	{if $isProductionServer}
		{read($baseTemplateDir.'/analytics.html', true)}
	{/if}

{/block}


			{***************   body:  **************}


{block 'header'}

    <header class="header-banner">
        <div class="header-container">

            <div class="illustration-wrapper">
                <div class="header-illustration"></div>
            </div>

            <div class="header-wrapper">
                <div class="header-subwrapper">
                    <div class="header-group">

                        <div class="header-logo"></div>

                        <div class="header-text">
                            <a class="header-title" n:href=":Front:Content:article">
                                <span class="header-item">KAMENICTVÍ PRAHA</span>
                                <span class="header-item">Tomáš Čierny</span>
                            </a>

                            <div class="header-subtitle">
                                <span class="header-subitem">kamenické práce, kamenické výrobky</span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </header>

{/block}


{block 'topMainMenu'}
	{control 'frontMenu', location: 'top', toggle: true}
{/block}


{block 'bottomMainMenu'}
	{control 'frontMenu', location: 'bottom', toggle: false}
{/block}


{block 'mainContent'}

    {block 'side'}{/block}

	<article class="article">

        <h1 class="heading">{include 'title'}</h1>

		{include 'article'}

	</article>

    {block 'bottom'}{/block}

{/block}


{block 'footer'}

	<footer class="footer-banner footer-banner-background">

		<div class="footer-wrapper">
			<p class="footer-bar">
				<span class="footer-snipp">&copy; 2025 &nbsp; Tomáš Čierny</span>
				<span class="footer-delim">-</span>
				<span class="footer-snipp">kamenictví, kamenické práce</span>
				<span class="link-bar">
					<a class="footer-link" href="https://www.web-expert.cz/" target="_blank">www.web-expert.cz</a>
				</span>
			</p>
		</div>

	</footer>

{/block}
