{varType string $location }


{if $location === 'side'}
    <aside id="kontakt" data-target-kontakt-side class="aside-container side-column grid-view">

        {include 'contact'}

        {include 'addressPrague'}

        {include 'addressMoravia'}

    </aside>
{/if}


{if $location === 'top'}
    <aside data-target-kontakt-top class="aside-container flow-view">

        {include 'contact'}

    </aside>
{/if}


{if $location === 'bottom'}
    <aside data-target-kontakt-bottom class="aside-container">

        {include 'contact'}

        {include 'addressPrague'}

        {include 'addressMoravia'}

    </aside>
{/if}


{define 'contact'}
